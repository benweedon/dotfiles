[alias]
    d = diff
    dc = diff --cached
    dw = diff --color-words
    dwc = diff --color-words --cached
    dww = diff --color-words=.
    dwwc = diff --color-words=. --cached
    nvim = !nvim +'Git | only'
    neovide = !neovide +'Git | only'
[commit]
    verbose = true
[core]
    autocrlf = input
    excludesfile = ~/.gitignore
    attributesfile = ~/.gitattributes
    editor = nvim
[diff]
    tool = vimdiff
    algorithm = histogram
[difftool]
    prompt = false
[init]
    defaultBranch = main
[merge]
    tool = vimdiff
[pull]
    ff = only
